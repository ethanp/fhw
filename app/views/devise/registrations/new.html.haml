.authform
  = simple_form_for resource,
    as: resource_name,
    url: registration_path(resource_name),
    html: {role: 'form'} do |f|

    %h3 Sign up
    = devise_error_messages!

    .form-inputs
      = f.input :name, autofocus: true
      = f.input :email
      = f.input :password
      = f.input :password_confirmation

    .form-actions
      = f.button :submit
